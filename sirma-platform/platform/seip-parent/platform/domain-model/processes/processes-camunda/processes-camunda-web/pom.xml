<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>com.sirma.itt.seip</groupId>
		<artifactId>processes-camunda</artifactId>
		<version>2.28.0-SNAPSHOT</version>
	</parent>
	<artifactId>processes-camunda-web</artifactId>
	<name>Camunda Web integration</name>
	<dependencies>
		<dependency>
			<groupId>com.sirma.itt.seip</groupId>
			<artifactId>processes-camunda-core</artifactId>
		</dependency>
		<dependency>
			<groupId>org.camunda.bpm.webapp</groupId>
			<artifactId>camunda-webapp</artifactId>
			<version>${version.camunda}</version>
			<type>war</type>
			<scope>runtime</scope>
			<optional>true</optional>
		</dependency>
		<dependency>
			<groupId>org.camunda.bpm.webapp</groupId>
			<artifactId>camunda-webapp</artifactId>
			<classifier>classes</classifier>
			<version>${version.camunda}</version>
		</dependency>
		<dependency>
			<groupId>com.fasterxml.jackson.jaxrs</groupId>
			<artifactId>jackson-jaxrs-json-provider</artifactId>
			<scope>provided</scope>
		</dependency>
	</dependencies>

	<build>
		<resources>
			<resource>
				<directory>src/main/resources</directory>
			</resource>
			<resource>
				<directory>src/main/camunda-bpmnweb</directory>
			</resource>
		</resources>
		<plugins>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>build-helper-maven-plugin</artifactId>
				<version>1.12</version>
				<executions>
					<execution>
						<id>add-source</id>
						<phase>generate-sources</phase>
						<goals>
							<goal>add-source</goal>
						</goals>
						<configuration>
							<sources>
								<source>src/main/camunda-bpmnweb</source>
							</sources>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<!-- first fetch and unpack the war -->
			<plugin>
				<artifactId>maven-dependency-plugin</artifactId>
				<version>2.10</version>
				<executions>
					<execution>
						<id>unpack</id>
						<phase>generate-resources</phase>
						<goals>
							<goal>unpack</goal>
						</goals>
						<configuration>
							<artifactItems>
								<artifactItem>
									<groupId>org.camunda.bpm.webapp</groupId>
									<artifactId>camunda-webapp</artifactId>
									<version>${version.camunda}</version>
									<type>war</type>
									<overWrite>true</overWrite>
									<outputDirectory>src/main/camunda-bpmnweb/META-INF/resources</outputDirectory>
									<includes>app/**,lib/**,plugin/**</includes>
									<excludes>WEB-INF/**,META-INF/**,**/app/index.html</excludes>
								</artifactItem>
							</artifactItems>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>