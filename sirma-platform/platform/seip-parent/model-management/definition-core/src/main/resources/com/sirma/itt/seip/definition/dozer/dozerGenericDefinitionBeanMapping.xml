<?xml version="1.0" encoding="UTF-8"?>
<mappings xmlns="http://dozer.sourceforge.net" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://dozer.sourceforge.net
          http://dozer.sourceforge.net/schema/beanmapping.xsd">

	<mapping>
		<class-a>com.sirma.itt.seip.definition.model.GenericDefinitionImpl</class-a>
		<class-b>com.sirma.itt.seip.definition.jaxb.Definition</class-b>

		<field-exclude>
			<a>operation</a>
			<b>operation</b>
		</field-exclude>
		<field-exclude>
			<a>fieldHandler</a>
			<b>fieldHandler</b>
		</field-exclude>
		<field-exclude>
			<a>$JAVASSIST_READ_WRITE_HANDLER</a>
			<b>$JAVASSIST_READ_WRITE_HANDLER</b>
		</field-exclude>

		<field>
			<a>configurations</a>
			<b>configuration.fields.field</b>
			<a-hint>com.sirma.itt.seip.definition.model.PropertyDefinitionProxy</a-hint>
			<b-hint>com.sirma.itt.seip.definition.jaxb.ComplexFieldDefinition</b-hint>
		</field>
		<field>
			<a>fields</a>
			<b>fields.field</b>
			<a-hint>com.sirma.itt.seip.definition.model.PropertyDefinitionProxy</a-hint>
			<b-hint>com.sirma.itt.seip.definition.jaxb.ComplexFieldDefinition</b-hint>
		</field>
		<field>
			<a>regions</a>
			<b>regions.region</b>
			<a-hint>com.sirma.itt.seip.definition.model.RegionDefinitionImpl</a-hint>
			<b-hint>com.sirma.itt.seip.definition.jaxb.RegionDefinition</b-hint>
		</field>
		<field>
			<a>allowedChildren</a>
			<b>allowedChildren.child</b>
			<a-hint>com.sirma.itt.seip.definition.model.AllowedChildDefinitionImpl</a-hint>
			<b-hint>com.sirma.itt.seip.definition.jaxb.ChildType</b-hint>
		</field>
		<field>
			<a>transitions</a>
			<b>transitions.transition</b>
			<a-hint>com.sirma.itt.seip.definition.model.TransitionDefinitionImpl</a-hint>
			<b-hint>com.sirma.itt.seip.definition.jaxb.TransitionDefinition</b-hint>
		</field>
		<field>
			<a>transitionGroups</a>
			<b>transitions.group</b>
			<a-hint>com.sirma.itt.seip.definition.model.TransitionGroupDefinitionImpl</a-hint>
			<b-hint>com.sirma.itt.seip.definition.jaxb.TransitionGroupDefinition</b-hint>
		</field>
		<field>
			<a>stateTransitions</a>
			<b>stateTransitions.stateTransition</b>
			<a-hint>com.sirma.itt.seip.definition.model.StateTransitionImpl</a-hint>
			<b-hint>com.sirma.itt.seip.definition.jaxb.StateTransitionDefinition</b-hint>
		</field>
		<field>
			<a>identifier</a>
			<b>id</b>
		</field>
		<field>
			<a>parentDefinitionId</a>
			<b>parentId</b>
		</field>
		<field>
			<a set-method="setAbstract" get-method="getAbstract">Abstract</a>
			<b get-method="isIsAbstract" set-method="setIsAbstract">isAbstract</b>
		</field>
		<field>
			<a>expression</a>
			<b>saveCondition</b>
		</field>
		<field>
			<a>type</a>
			<b>type</b>
		</field>
		<field>
			<a>referenceId</a>
			<b>referenceId</b>
		</field>
	</mapping>

</mappings>