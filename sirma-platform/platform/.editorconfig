root = true

[{*.sh,Dockerfile,Vagrantfile}]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = tab
trim_trailing_whitespace = true

[*.yaml]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[pom.xml]
indent_style = tab

[*.json]
indent_style = space
indent_size = 2