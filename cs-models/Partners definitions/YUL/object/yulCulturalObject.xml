		<transition id="revoke" order="55" label="yul.revoke.action.label" tooltip="yul.revoke.action.tooltip" eventId="revoke" purpose="transition" immediate="true" confirmation="revoke.confirm">
			<fields>
				<field name="sendMail" type="an..200" displayType="system" >
					<value>
						<![CDATA[	
							var type = codelist.getDescription(7, root.get('type'), 'en');
							var title = root.get('title');
							var subject = '(Revoked) ' + type + ': ' + title;
							
							//extract warchers users
							var watchers = root.get('hasWatcher');
							var recipients = [];
							var i = 0;
							if (watchers != null){
								for(i = 0; i < watchers.length; i++) {
									recipients.push(watchers[i].toString());
								}
							}
							var targetID = root.get('duplicates');
							var instances = [];
							for(i = 0; i < targetID.length; i++) {
							var ins = instance.load(targetID[i]);
