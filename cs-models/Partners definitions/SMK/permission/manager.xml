<roles>
	<role name="MANAGER" priority="20">
		<include>manager_external</include>
	</role>	
	<role name="manager_external" external="false">
		<permission name="transition">
		     <actions>
				<action name="activateTemplate" /> 
				<action name="addAttachment" />
				<action name="addDepiction" />
				<action name="addIcons" />
				<action name="addPrimaryImage" />
				<action name="addReferences" />
				<action name="addThumbnail" />
				<action name="addWatchers" />
				<action name="amendPhotos_manager" local="true" bind="amendPhotos">
                    <filter value="ASSIGNEE" />
                </action>
				<action name="approve_manager" local="true" bind="approve">
                    <filter value="ASSIGNEE" />
                </action>
				<action name="approveAndPublish_manager" local="true" bind="approveAndPublish">
                    <filter value="ASSIGNEE" />
                </action>
				<action name="changeTemplate" />
				<action name="clarified" />
				<action name="clarify" />
				<action name="clone" >
					<filter value="NOT_PART_OF_WORKFLOW" />
				</action>
				<action name="cloneTemplate" />
				<action name="complete" />
				<action name="completeTask" >
					<filter value="NOT_PART_OF_WORKFLOW" />
				</action>
				<action name="create" />
				<action name="achive_contributor" local="true" bind="achive">
					<filter value="IS_CREATED" />
				</action>
				<action name="createCase" />
				<action name="createDocument" />
				<action name="createInContext" />
				<action name="createSubTask" />
				<action name="createTask" />
				<action name="createTemplate" />
				<action name="createWorkflow" />
				<action name="delete" >
					<filter value="NOT_PART_OF_WORKFLOW" />
				</action>
				<action name="deleteComment" />
				<action name="download" />
				<action name="editDetails" />
				<action name="editComment"/>
				<action name="exportTabPDF" />
				<action name="exportTabWord" />
				<action name="exportPDF" />
				<action name="exportWord" />
				<action name="finalApprove_manager" local="true" bind="finalApprove">
                    <filter value="ASSIGNEE" />
                </action>
				<action name="finish_manager" local="true" bind="finish">
                    <filter value="ASSIGNEE" />
                </action>
				<action name="implementRecommendations_manager" local="true" bind="implementRecommendations">
                    <filter value="ASSIGNEE" />
                </action>
				<action name="import" />
				<action name="importFile" />
				<action name="partialImportFile" />
				<action name="lock" />
				<action name="managePermissions"/>
				<action name="move" >
					<filter value="NOT_PART_OF_WORKFLOW" />
				</action>
				<action name="createComment" />
				<action name="open" />
				<action name="prepareImport" />
				<action name="print" />
				<action name="printTab" />
				<action name="publish" >
					<filter value="IS_UPLOADED" />
				</action>
				<action name="publishAsPdf" >
					<filter value="IS_CREATED" />
				</action>
				<action name="reassign" />
				<action name="reject_manager" local="true" bind="reject">
					<filter value="ASSIGNEE" />
				</action>
				<action name="rejectMovement_manager" local="true" bind="rejectMovement">
					<filter value="ASSIGNEE" />
				</action>
				<action name="rejectTask_manager" local="true" bind="rejectTask">
					<filter value="ASSIGNEE" />
				</action>
				<action name="reopen" />
				<action name="replyComment" />
				<action name="suspendComment" />
				<action name="resolveIssue" />
				<action name="restart" />
				<action name="restartComment" />
				<action name="revertVersion" />		
				<action name="revoke" />		
				<action name="saveAsTemplate"/>
				<action name="setTemplateAsPrimary"/>
				<action name="start"/>
				<action name="startProgress"/>
				<action name="stop">
					<filter value="NOT_PART_OF_WORKFLOW" />
				</action>
				<action name="suspend" />
				<action name="takeMoreSamples_manager" local="true" bind="takeMoreSamples">
					<filter value="ASSIGNEE" />
				</action>			
				<action name="unlock" />
				<action name="updateInt" />
				<action name="updateTemplate" />
				<action name="uploadNewVersion" />
				<action name="uploadRevision" />
				<action name="viewDetails" />
								
				<!-- template actitions -->
				<action name="editTemplateRule"/>
				<action name="deactivateTemplate"/>
				<action name="updateExistingObjects"/>
			</actions>
		</permission>
	</role>
</roles>
