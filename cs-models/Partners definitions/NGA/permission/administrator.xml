<roles>
	<role name="ADMINISTRATOR" priority="100">
		<include>administrator_external</include>
	</role>
	<role name="administrator_external" external="false">
		<permission name="create">
			<actions>
				<action name="updateIntAdmin" local="true" bind="updateInt" />
			</actions>
		</permission>
		<permission name="transition">
			<actions>
				<action name="publish" >
					<filter value="IS_UPLOADED" />
				</action>
				<action name="publishAsPdf" >
					<filter value="IS_CREATED" />
				</action>
			</actions>
		</permission>
	</role>
</roles>